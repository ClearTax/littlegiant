{
  "name": "littlegiant",
  "version": "0.0.0",
  "description": "The little UI Framework",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm-run-all -s build:sass build:postcss build:uglify",
    "build:sass": "node-sass src/littlegiant.scss css/littlegiant.css --source-map true",
    "build:postcss": "postcss css/littlegiant.css --no-map --use autoprefixer -o css/littlegiant.css",
    "build:sass:watch": "node-sass src/littlegiant.scss css/littlegiant.css --watch",
    "build:uglify": "uglifycss css/littlegiant.css > css/littlegiant.min.css",
    "docs": "cd docs && npm start",
    "dev": "npm-run-all -p build:sass:watch docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ClearTax/littlegiant.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ClearTax/littlegiant/issues"
  },
  "homepage": "https://github.com/ClearTax/littlegiant#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "uglifycss": "0.0.29"
  }
}
